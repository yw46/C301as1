<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="225dp"
            android:text="Player1"
            android:id="@+id/fourPlayer1"
            android:layout_above="@+id/fourPlayer3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="180dp"
            android:layout_height="225dp"
            android:text="Player 2"
            android:id="@+id/fourPlayer2"
            android:layout_alignTop="@+id/fourPlayer1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="180dp"
            android:layout_height="225dp"
            android:text="Player 3"
            android:id="@+id/fourPlayer3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="180dp"
            android:layout_height="225dp"
            android:text="Player 4"
            android:id="@+id/fourPlayer4"
            android:layout_below="@+id/fourPlayer2"
            android:layout_alignLeft="@+id/fourPlayer2"
            android:layout_alignStart="@+id/fourPlayer2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/fourPlayerText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_above="@+id/fourPlayer2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false" />
    </RelativeLayout>
</LinearLayout><!-- From: file:/cshome/yishuo/Desktop/c301/C301as1-master/app/src/main/res/layout/activity_fourplayerbuzzer.xml -->